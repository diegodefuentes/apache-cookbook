

LoadModule ssl_module modules/mod_ssl.so

Listen <%= node['apache']['SSLport'] %>

SSLPassPhraseDialog  <%= node['apache']['Builtin'] %>

SSLSessionCache         dbm:/var/log/httpd/mod_ssl/ssl_scache
SSLSessionCacheTimeout  <%= node['apache']['SSLSessionCacheTimeout'] %>

#SSLMutex  <%= node['apache']['SSLMutex'] %>

SSLRandomSeed startup <%= node['apache']['Builtin'] %>
SSLRandomSeed connect <%= node['apache']['Builtin'] %>
#SSLRandomSeed startup file:/dev/random  512
#SSLRandomSeed connect file:/dev/random  512
#SSLRandomSeed connect file:/dev/urandom 512

SSLCryptoDevice <%= node['apache']['Builtin'] %>

ErrorLog <%= node['apache']['SSLErrorLog'] %>
TransferLog <%= node['apache']['SSLAccessLog'] %>
LogLevel <%= node['apache']['LogLevel'] %>

SSLProtocol all -SSLv2 -SSLv3
SSLCipherSuite ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA:ECDHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA256:DHE-RSA-AES128-SHA256:DHE-RSA-AES256-SHA:DHE-RSA-AES128-SHA:ECDHE-RSA-DES-CBC3-SHA:EDH-RSA-DES-CBC3-SHA:AES256-GCM-SHA384:AES128-GCM-SHA256:AES256-SHA256:AES128-SHA256:AES256-SHA:AES128-SHA:DES-CBC3-SHA:HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4
SSLStrictSNIVHostCheck off
SSLHonorCipherOrder on

SSLVerifyClient      none

AddType application/x-x509-ca-cert .crt
AddType application/x-pkcs7-crl    .crl

#NameVirtualHost *:<%= node['apache']['SSLport'] %>
